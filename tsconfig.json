{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "downlevelIteration": true,
    "declarationDir": "./dist/"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./dist/",
    "./node_modules/"
  ]
}
